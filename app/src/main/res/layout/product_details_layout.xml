<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lin"
            android:orientation="vertical"
            android:layout_margin="16dp">


            <customfonts.Zoom.TouchImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:id="@+id/image_preview"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#afb3b4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:id="@+id/cat_name_text"
                android:text="Fashio"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/money_">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/price"
                        android:text="Rs. 200"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#061fda"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/price_original"
                        android:text="Rs. 260"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="30dp"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="right"
                    android:layout_alignParentEnd="true"
                    tools:ignore="RtlHardcoded">


                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/fav_add"
                        app:srcCompat="@drawable/heart_outline"
                        android:layout_gravity="start"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="20"
                        android:id="@+id/count_all"
                        android:textColor="@color/text"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>


            </RelativeLayout>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Delivery :"
                tools:targetApi="jelly_bean" />


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- EditText for Search -->
                <EditText android:id="@+id/pin_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your Pin"
                    android:textSize="15sp"
                    android:imeOptions="actionDone"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="2dp"
                    android:maxLength="6"
                    android:textColor="@color/text"
                    android:inputType="number"
                    android:backgroundTint="@color/text"
                    tools:ignore="UnusedAttribute" />


                <TextView
                    android:id="@+id/btn_check"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:textSize="12sp"
                    android:layout_alignRight="@+id/pin_check"
                    android:layout_marginRight="10dp"
                    android:text="CHECK"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:visibility="visible"/>

            </RelativeLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:textSize="14sp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/pin_text"
                android:layout_marginTop="6dp"
                android:text="Usually delivers in 7-10 days "/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product_id_text"
                android:layout_marginTop="20dp"
                android:textColor="@color/text"
                android:text="Product ID - 34"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:textSize="15sp"
                android:text="Sizes Available :"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@color/text"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/size_available"
                android:textSize="13sp"
                android:text="hey hello how are you i  mame fine dnknckn"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:text="Payment Options :"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@color/text"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:id="@+id/cod_available_text"
                android:text="Cash On Delivery "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="13sp"
                android:id="@+id/op_available_text"
                android:text="Online Payment âœ“"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:text="Description :"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@color/text"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:id="@+id/desc_text"
                android:text="hey hello how are you i  mame fine dnknckn"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/review_lin">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#afb3b4"
                    android:layout_marginTop="15dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/review_layout"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reviews "
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/text"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/white"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/btn_rate"
                        android:text="Rate"
                        />

                </RelativeLayout>


                <android.support.v7.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/review_r_view"
                    android:layout_marginTop="10dp"
                    ></android.support.v7.widget.RecyclerView>

            </LinearLayout>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>